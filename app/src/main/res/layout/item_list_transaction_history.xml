<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_shape_white_default"
        android:src="@drawable/ic_arrow_top_rounded"
        app:tint="@color/black"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/tv_name_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/iv_category"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Upwork" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_transaction"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_category"
        android:textStyle="italic"
        tools:text="Today" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>